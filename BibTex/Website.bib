@article{longchuan2023,
  title = {ソーシャルメディア言論分析の方法①},
  author = {瀧川, 裕貴 and 永吉, 希久子 and 呂, 沢宇 and 下窪, 拓也 and 渡辺, 誓司 and 中村, 美子},
  date = {2023},
